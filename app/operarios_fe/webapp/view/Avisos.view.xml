<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns:core="sap.ui.core"
  controllerName="nsoperariosfe.operariosfe.controller.Avisos">
 <!--  <Page title="Avisos">
    <content>
      <Text text="Esta es la vista del servicio de Avisos." />
    </content>
  </Page> -->

    <f:DynamicPage id="dynamicPageAvisos"
                   showFooter="true">

      <f:title>
        <f:DynamicPageTitle >
          <f:heading>
            <Text text="{i18n>titleAvisos}" wrapping="true"></Text>
          </f:heading>

          <f:actions>

            <Button id="backMainAvisos"
                    icon="sap-icon://nav-back"
                    tooltip="{i18n>VolverMain}"
                    press="goToMain"/>
          </f:actions>

        </f:DynamicPageTitle>
      </f:title>


      <f:header>
        
        <f:DynamicPageHeader>

          <fb:FilterBar showRestoreButton="false"
                        useToolbar="false"
                        showFilterConfiguration="false"
                        showGoOnFB="false">

              <fb:filterGroupItems>
              <!-- Se aÃ±aden filtros-->
                <fb:FilterGroupItem name="Avisos"
                                    groupName="filters"
                                    label="Avisos"
                                    visibleInFilterBar="true">

                  <fb:control>
                    <Input value="{filters>/Avisos}"
                           valueLiveUpdate="true"
                           liveChange="onSearch"
                           enabled="{= !${viewModel>hasUIChanges}}"></Input>
                  </fb:control>

                </fb:FilterGroupItem>

                <fb:FilterGroupItem name="Estado"
                                    groupName="filters"
                                    label="Estados"
                                    visibleInFilterBar="true">

                  <fb:control>
                    <ComboBox items="{path:'/EstadosSRV'}"
                              selectedKey="{filters>/Estado}"
                              selectionChange="onSearch"
                              enabled="{= !${viewModel>hasUIChanges}}">

                    <items>
                      <core:Item key="{Estado}" text="{Estado}"/>
                    </items>

                    </ComboBox>
                  </fb:control>

                </fb:FilterGroupItem>

              </fb:filterGroupItems>

          </fb:FilterBar>

        </f:DynamicPageHeader>

      </f:header>

      <f:content>

      <Table id="avisosTable"
             growing="true"
             growingThreshold="10"
             items="{ 
             path:'/OperarioToAvisosSrv',
             parameters: {
                $count : true,
                $$updateGroupId: 'AvisosGroup'
             }
            }"
            mode="SingleSelectLeft">

        <headerToolbar>
          <OverflowToolbar>
            <content>

              <ToolbarSpacer />
              <Button id="addAvisos"
                      icon="sap-icon://add"
                      tooltip="{i18n>create}"
                      press="onCreate"/>
               <Button id="delAvisos"
                      icon="sap-icon://delete"
                      tooltip="{i18n>delete}"
                      press="onDelete"/>
              <Button id="updAvisos"
                      icon="sap-icon://edit"
                      tooltip="{i18n>update}"
                      press="onUpdate"/>
            </content>
          </OverflowToolbar>
        </headerToolbar>

        <columns>

          <Column hAlign="Begin"
                  minScreenWidth="Small"
                  demandPopin="true">
                  <Text text="{i18n>NombreOpe}"></Text>

          </Column>

          <Column hAlign="Begin"
                  minScreenWidth="Small"
                  demandPopin="true">
                  <Text text="{i18n>ApellidoOpe}"></Text>

          </Column>

          <Column hAlign="Begin"
                  minScreenWidth="Small"
                  demandPopin="true">
                  <Text text="{i18n>AvisoID}"></Text>

          </Column>

          <Column hAlign="Begin"
                  minScreenWidth="Small"
                  demandPopin="true">
                  <Text text="{i18n>Estado}"></Text>

          </Column>

          <Column hAlign="Begin"
                  minScreenWidth="Small"
                  demandPopin="true">
                  <Text text="{i18n>Texto}"></Text>

          </Column>

        </columns>

        <items>
          <ColumnListItem >
            <cells>
              <Input value="{Nombre}"
                     liveChange="onInputChange"/>
              <Input value="{Apellidos}"
                     liveChange="onInputChange"/>
              <Input value="{AvisoID}"
                     liveChange="onInputChange"/>

               <Input value="{Estado}"
                     liveChange="onInputChange"/>

               <Input value="{Texto}"
                     liveChange="onInputChange"/>

            </cells>
          </ColumnListItem>
        </items>

      </Table>

      </f:content>

      <f:footer>

        <OverflowToolbar visible="{= !${viewModel>hasUIChanges}}" >

        <ToolbarSpacer />

        <Button id="onSaveAviso"
                icon="sap-icon://save"
                tooltip="{i18n>saveButton}"
                type="Success"
                press="onSave"/>

         <Button id="onCancelAviso"
                icon="sap-icon://cancel"
                tooltip="{i18n>cancelButton}"
                type="Negative"
                press="onCancel"/>

        </OverflowToolbar>
      </f:footer>

    </f:DynamicPage>

</mvc:View>